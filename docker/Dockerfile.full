#
# Cortex Full — complete capabilities including Chromium for browser
# fallback, WebMCP, and JS-rendered pages.
# Size: ~350 MB compressed.
#
# Build:
#   docker build -f docker/Dockerfile.full -t cortex/cortex .
#
# Run:
#   docker run -d -p 7700:7700 --name cortex cortex/cortex

# ── Stage 1: Build ────────────────────────────────────────────────
FROM rust:1.82-slim-bookworm AS builder

RUN apt-get update && apt-get install -y --no-install-recommends \
    pkg-config libssl-dev ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build
COPY runtime/ runtime/

WORKDIR /build/runtime
RUN cargo build --release \
    && strip target/release/cortex

# ── Stage 2: Runtime ──────────────────────────────────────────────
FROM debian:bookworm-slim

# Chromium dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    chromium \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libgbm1 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libx11-xcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

RUN groupadd -r cortex && useradd -r -g cortex -d /home/cortex -s /bin/sh cortex \
    && mkdir -p /home/cortex/.cortex/maps \
    && chown -R cortex:cortex /home/cortex

COPY --from=builder /build/runtime/target/release/cortex /usr/local/bin/cortex
COPY runtime/config/ /etc/cortex/config/

USER cortex
WORKDIR /home/cortex

ENV CORTEX_CONFIG_DIR=/etc/cortex/config
ENV CORTEX_DATA_DIR=/home/cortex/.cortex
ENV CORTEX_HTTP_PORT=7700
ENV CORTEX_CHROME_PATH=/usr/bin/chromium
# Required for headless Chromium in containers
ENV CHROMIUM_FLAGS="--no-sandbox --disable-gpu --disable-dev-shm-usage"

EXPOSE 7700

HEALTHCHECK --interval=30s --timeout=5s --retries=3 \
    CMD cortex status || exit 1

ENTRYPOINT ["cortex"]
CMD ["start", "--http-port", "7700"]
